<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="andrey">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="template" columnName="date_modified"/>
            </not>
        </preConditions>

        <addColumn tableName="template">
            <column name="date_modified" type="timestamp with timezone"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="andrey">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="template_config" columnName="date_modified"/>
            </not>
        </preConditions>

        <addColumn tableName="template_config">
            <column name="date_modified" type="timestamp with timezone"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>